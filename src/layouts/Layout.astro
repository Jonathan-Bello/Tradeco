---
import { ViewTransitions } from "astro:transitions";
import Header from "./Header";
import Footer from "./Footer.astro";
import WhatsAppBtn from "./WhatsAppBtn.astro";
import GlobalStyles from "../styles/GlobalStyles.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <!-- Metadatos del documento -->
    <meta charset="UTF-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>

    <!-- Metadatos para SEO -->
    <meta
      name="description"
      content="Importador y distribuidor de pisos vinílicos Artis y piedras Perdura Stone"
    />
    <meta
      name="keywords"
      content="Tradeco, Tradeco Costa Rica, Tradeco 506, Artis, Perdura Stone, Imperial Stone, Stona, pisos, pisos LVT, pisos SPC, piso vinílico Artis LVT, piso vinílico Artis SPC, pisos vinílicos, pisos laminados, piso PVC, pisos plásticos, pisos flotantes, pisos click, pisos adhesivos, Ática, Ares, Boreas, Isis, Hydra, Kiara, Kalia, Hera, Seth, Cibeles, Odra, Coco Oak, Massy Oak, White Oak, Carbon, Koly Oak, Canadian Grey, enchapes de piedra, fachaleta, piedra Perdura Stone, Fast Set, Castillo Europeo, Carolina, Vulcano, Castell, Risco, Fachaleta Old Brick, Fachaleta Árabe, Fachaleta corcho"
    />
    <meta
      name="author"
      content="Jonathan Alexis Bello Lopez - YGU COMUNICAXION"
    />
    <meta name="robots" content="index, follow" />

    <!-- Metadatos de Open Graph para redes sociales (Facebook, Twitter, etc.) -->
    <meta property="og:title" content="Tradeco Costa Rica" />
    <meta
      property="og:description"
      content="Importador y distribuidor de pisos vinílicos Artis y piedras Perdura Stone"
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://tradeco506.com/" />
    <meta property="og:image" content="/ogimage.jpg" />
    <meta property="og:site_name" content="Tradeco Costa Rica" />
    <meta name="twitter:title" content="Tradeco Costa Rica" />
    <meta
      name="twitter:description"
      content="Importador y distribuidor de pisos vinílicos Artis y piedras Perdura Stone"
    />
    <meta name="twitter:image" content="/ogimage.jpg" />

    <!-- Canonical URL, para evitar problemas de contenido duplicado -->
    <link rel="canonical" href="https://tradeco506.com/" />

    <link rel="apple-touch-icon" href="/favicon.svg" />

    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <ViewTransitions />
  </head>
  <body class="min-h-screen flex flex-col">
    <Header client:only />

    <main class="flex flex-col justify-center items-center mt-20 flex-1">
      <slot />
      <WhatsAppBtn />
    </main>

    <Footer />
    <GlobalStyles />

    <script src="./viewTransitionsConfig.js"></script>
  </body>
</html>
