---
import { Image } from "astro:assets";
import iconPhone from "@/assets/svg/icon-phone.svg";
import iconWhatsapp from "@/assets/svg/icon-whatsapp.svg";
---

<section class="w-full relative h-[52rem] md:h-[32rem]">
  <div class="container m-auto relative px-4 md:px-0 pt-4 z-10">
    <div
      class="bg-white border-solid border-2 md:border-4 border-black
     py-4 px-4 md:pl-6 rounded-lg max-w-sm"
    >
      <h3 class="font-title text-primary-500 tracking-wider text-lg md:mb-1">
        Dirección
      </h3>
      <p class="mb-6">
        San José, Lindora; del puente sobre el río Virilla 100 norte, 600 oeste
        y 400 norte. Bodegas Los Malinches 4B.
      </p>

      <h3
        class="font-title text-primary-500 tracking-wider text-lg mb-2 md:mb-2"
      >
        Teléfonos
      </h3>
      <ul class="mb-6">
        <li class="flex items-center gap-2 mb-2">
          <Image class="size-6 md:size-8" src={iconPhone} alt="tel-icon" />
          <a href="tel:+506 2239 6647">(506) 2239 6647</a>
        </li>
        <li class="flex items-center gap-2 mb-2">
          <Image class="size-6 md:size-8" src={iconPhone} alt="tel-icon" />
          <a href="tel:+506 2239 6648">(506) 2239 6648</a>
        </li>
        <li class="flex items-center gap-2 mb-2">
          <Image class="size-6 md:size-8" src={iconWhatsapp} alt="WA-icon" />
          <a
            href="https://api.whatsapp.com/send?phone=50687654114"
            target="_blank">(506) 8765 4114</a
          >
        </li>
      </ul>

      <h3 class="font-title text-primary-500 tracking-wider text-lg md:mb-1">
        E-mail
      </h3>
      <a href="mailto:ventas@tradeco506.com">ventas@tradeco506.com</a>
    </div>
  </div>

  <iframe
    class="w-full h-full absolute inset-0"
    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d982.3945385289661!2d-84.20591946120622!3d9.969011610463781!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8fa0f95330a30f0f%3A0x553ebe3ae749ed12!2sTradeco%20Costa%20Rica!5e0!3m2!1ses!2smx!4v1709073757977!5m2!1ses!2smx"
    style="border:0;"
    allowfullscreen=""
    loading="lazy"
    referrerpolicy="no-referrer-when-downgrade"></iframe>
</section>

