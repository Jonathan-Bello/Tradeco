---
import { Image } from "astro:assets";
import Marca01 from "../../../assets/imgs/home/logoMarca01.png";
import Marca02 from "../../../assets/imgs/home/logoMarca02.png";
import Marca03 from "../../../assets/imgs/home/logoMarca03.png";
import Marca04 from "../../../assets/imgs/home/logoMarca04.png";
---

<section
  class="marcasBanner flex flex-col items-center relative w-full
  px-4 py-6 md:px-0 md:py-12 lg:py-16 xl:pt-10 xl:pb-20
  rounded-xl lg:rounded-t-[2.5rem]"
>
  <div class="container">
    <h2
      class="text-secondary-500 text-end
      text-2xl sm:text-3xl md:text-4xl lg:text-5xl
      font-title font-bold tracking-widest
      mb-2 xl:py-4"
    >
      Exclusivas marcas
    </h2>

    <div
      class="flex flex-col items-end xl:flex-row xl:justify-end flex-shrink-0"
    >
      <div
        class="flex justify-end gap-8 xl:justify-evenly
      order-1 xl:order-last"
      >
        <Image
          class="w-3/12 md:w-4/12 order-1 xl:order-2"
          src={Marca01}
          alt={"ArtisFlooring"}
        />
        <Image
          class="w-3/12 md:w-4/12 order-2 xl:order-1"
          src={Marca02}
          alt={"Stona"}
        />
      </div>
      <div
        class="flex justify-end gap-8 xl:justify-evenly
      order-2 xl:order-first"
      >
        <Image
          class="w-3/12 md:w-4/12 order-1 xl:order-2"
          src={Marca03}
          alt={"Imperial Stone"}
        />
        <Image
          class="w-3/12 md:w-4/12 order-2 xl:order-1"
          src={Marca04}
          alt={"Perdura stone"}
        />
      </div>
    </div>
  </div>
</section>

<style lang="scss">
  .marcasBanner {
    background-color: red; /* Color de fondo para el elemento */
    background-image: url("../../../assets/imgs/home/bgMarcas.jpg");
    background-size: cover;
    background-repeat: no-repeat;
  }
  .marcasBanner::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-position: left;
    mix-blend-mode: screen;
    background: url("../../../assets/imgs/home/maskMobile.png");
    background-repeat: no-repeat;
    background-size: cover;

    @media (min-width: 640px) {
      background-size: contain;
    }

    @media (min-width: 1024px) {
      background-position: center;
      background: url("../../../assets/imgs/home/mask.png");
    }
  }
</style>
