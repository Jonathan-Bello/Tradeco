---
import { Image } from "astro:assets";
import Marca01 from "../../../assets/imgs/home/logoMarca01.png";
import Marca02 from "../../../assets/imgs/home/logoMarca02.png";
import Marca03 from "../../../assets/imgs/home/logoMarca03.png";
import Marca04 from "../../../assets/imgs/home/logoMarca04.png";
---

<section
  class="marcasBanner flex flex-col items-center relative w-full
  px-4 py-6 md:px-0 md:py-12 lg:pt-16 lg:pb-20 xl:pt-10 xl:pb-24
  rounded-t-xl lg:rounded-t-[2.5rem]"
>
  <div class="container flex flex-col items-end">
    <h2
      class="text-secondary-500 text-end
      text-2xl sm:text-3xl md:text-4xl lg:text-5xl
      font-title font-bold tracking-widest
      mb-2 lg:pb-10 xl:py-4"
    >
      Exclusivas marcas
    </h2>

    <div
      class="w-2/3 grid grid-cols-2 lg:grid-cols-4 justify-items-end items-center gap-4 sm:gap-0 lg:gap-4"
    >
      <Image
        class="w-20 sm:w-32 lg:w-36 xl:w-48 order-2 lg:order-2"
        src={Marca03}
        alt={"Imperial Stone"}
      />
      <Image
        class="w-20 sm:w-32 lg:w-36 xl:w-48 order-1 lg:order-1"
        src={Marca04}
        alt={"Perdura stone"}
      />

      <Image
        class="w-20 sm:w-32 lg:w-36 xl:w-48 order-4 lg:order-4"
        src={Marca01}
        alt={"ArtisFlooring"}
      />
      <Image
        class="w-20 sm:w-32 lg:w-36 xl:w-48 order-3 lg:order-3"
        src={Marca02}
        alt={"Stona"}
      />
    </div>
  </div>
</section>

<style lang="scss">
  .marcasBanner {
    background-image: url("../../../assets/imgs/home/bgMarcas.jpg");
    background-size: cover;
    background-repeat: no-repeat;
  }
  .marcasBanner::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-position: left;
    mix-blend-mode: screen;
    background-image: url("../../../assets/imgs/home/maskMobile.png");
    background-repeat: no-repeat;
    background-size: cover;

    @media (min-width: 640px) {
      background-size: contain;
    }

    @media (min-width: 1024px) {
      background-position: left;
      background-size: cover;
      background-image: url("../../../assets/imgs/home/mask.png");
    }
  }
</style>
