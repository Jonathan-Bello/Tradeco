---
import { Image } from "astro:assets";
import { fade } from "astro:transitions";

type Props = {
  id: string;
  img: any;
  title: string;
  type: string;
};

const { id, img, title, type } = Astro.props;
---

<article class="flex flex-col items-end">
  <Image
    src={img}
    class="mb-3 object-cover aspect-square rounded-xl w-full"
    transition:name=`image-thumbnail-${id}`
    alt=`image-thumbnail-${id}`
    transition:animate={fade({ duration: "0.7s" })}
  />
  <h3
    class="text-accent-500 font-title text-lg sm:text-xl md:text-2xl lg:text-2xl xl:text-3xl uppercase text-end
  tracking-[2.04px] lg:mb-1"
  >
    {title}
  </h3>

  <a
    href=`/productos/${type === "lvt" ? "pisos-lvt" : "pisos-spc"}/${id}`
    class="text-accent-500 text-end underline
    font-light text-sm lg:text-lg tracking-[2px]
    hover:text-accent-900 hover:font-normal"
    >Ver m√°s detalles</a
  >
</article>

