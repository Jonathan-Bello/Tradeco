---
import ProductosSelect from "./ProductosSelect";
import ProductTypeCard from "./ProductosSelect/ProductTypeCard.astro";
import BannerSmall from "../../banners/BannerSmall.astro";

import bgBannerPisos from "@/assets/imgs/bannerProducts.jpg";
import bgBannerPiedras from "@/assets/imgs/bannerProductsPiedras.jpg";
import imgPiso01 from "@/assets/imgs/productos/Piso01.jpg";
import imgPiso02 from "@/assets/imgs/productos/Piso02.jpg";
import imgPiedra01 from "@/assets/imgs/productos/Piedra01.jpg";
import imgPiedra02 from "@/assets/imgs/productos/Piedra02.jpg";
import imgPiedra03 from "@/assets/imgs/productos/Piedra03.jpg";
---

<ProductosSelect client:load>
  <BannerSmall bgImage={bgBannerPisos} slot="bannerPisos" />
  <BannerSmall bgImage={bgBannerPiedras} slot="bannerPiedras" />

  <div class="grid grid-cols-1 sm:grid-cols-2 gap-x-4" slot="pisos">
    <ProductTypeCard
      imgBackground={imgPiso01}
      title="Piso vinílico Artis LVT"
      link="/productos/pisos-lvt"
      isPdf={false}
    />
    <ProductTypeCard
      imgBackground={imgPiso02}
      title="Piso vinílico Artis SPC"
      link="/productos/pisos-spc"
      isPdf={false}
    />
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-3 gap-x-4" slot="piedras">
    <ProductTypeCard
      imgBackground={imgPiedra01}
      title="Perdura Stone"
      link="/pdfs/piedras/catalogo_perdurastone.pdf"
      isPdf={true}
    />
    <ProductTypeCard
      imgBackground={imgPiedra02}
      title="Imperial Stone"
      link="/pdfs/piedras/catalogo_imperialstone.pdf"
      isPdf={true}
    />
    <ProductTypeCard
      imgBackground={imgPiedra03}
      title="Stona"
      link="/pdfs/piedras/catalogo_stona.pdf"
      isPdf={true}
    />
  </div>

  <slot />
</ProductosSelect>

